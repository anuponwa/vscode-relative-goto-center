{
  "name": "relative-goto-center",
  "displayName": "Relative Goto Center",
  "description": "",
  "author": {"name": "Anupong Wannakrairot", "email": "anuponwa@scg.com"},
  "publisher": "Anupong Wannakrairot",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "relative-goto-center.goto",
        "title": "Go to relative line and center"
      },
      {
        "command": "relative-goto-center.select",
        "title": "Select to relative line and center"
      }
    ],
    "keybindings": [
      {
        "command": "relative-goto-center.goto",
        "key": "alt+g"
      },
      {
        "command": "relative-goto-center.select",
        "key": "alt+shift+g"
      },
      {
        "command": "relative-goto-center.select",
        "key": "alt+s"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.45.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
